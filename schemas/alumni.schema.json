{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/prshlp/AI-dash/schemas/alumni.schema.json",
  "title": "Alumni Profile Schema",
  "description": "Schema for alumni profile data in the Williams College Alumni Portal",
  "type": "object",
  "required": [
    "id",
    "name",
    "class",
    "email"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "Unique identifier for the alumni"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Full name of the alumni"
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "First name of the alumni"
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Last name of the alumni"
    },
    "class": {
      "type": "string",
      "pattern": "^[0-9]{4}$",
      "description": "Graduation year (4-digit year)"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Primary email address"
    },
    "alternateEmail": {
      "type": "string",
      "format": "email",
      "description": "Secondary email address"
    },
    "phone": {
      "type": "string",
      "pattern": "^[+]?[1-9]?[0-9]{7,15}$",
      "description": "Phone number in international format"
    },
    "company": {
      "type": "string",
      "maxLength": 100,
      "description": "Current employer"
    },
    "position": {
      "type": "string",
      "maxLength": 100,
      "description": "Current job title"
    },
    "industry": {
      "type": "string",
      "enum": [
        "Technology",
        "Finance",
        "Healthcare",
        "Education",
        "Consulting",
        "Non-profit",
        "Government",
        "Media",
        "Real Estate",
        "Retail",
        "Manufacturing",
        "Energy",
        "Transportation",
        "Hospitality",
        "Sports",
        "Arts",
        "Legal",
        "Automotive",
        "Aerospace",
        "Agriculture",
        "Other"
      ],
      "description": "Industry sector"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string",
          "maxLength": 50
        },
        "state": {
          "type": "string",
          "maxLength": 50
        },
        "country": {
          "type": "string",
          "maxLength": 50
        },
        "formatted": {
          "type": "string",
          "maxLength": 200,
          "description": "Human-readable location string"
        }
      },
      "required": ["formatted"]
    },
    "bio": {
      "type": "string",
      "maxLength": 1000,
      "description": "Professional biography"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 20,
      "uniqueItems": true,
      "description": "Professional skills and competencies"
    },
    "interests": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "maxItems": 15,
      "uniqueItems": true,
      "description": "Personal interests and hobbies"
    },
    "socialMedia": {
      "type": "object",
      "properties": {
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL"
        },
        "twitter": {
          "type": "string",
          "format": "uri",
          "description": "Twitter profile URL"
        },
        "facebook": {
          "type": "string",
          "format": "uri",
          "description": "Facebook profile URL"
        },
        "instagram": {
          "type": "string",
          "format": "uri",
          "description": "Instagram profile URL"
        },
        "github": {
          "type": "string",
          "format": "uri",
          "description": "GitHub profile URL"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Personal or professional website"
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["institution", "degree"],
        "properties": {
          "institution": {
            "type": "string",
            "maxLength": 100
          },
          "degree": {
            "type": "string",
            "maxLength": 100
          },
          "field": {
            "type": "string",
            "maxLength": 100,
            "description": "Field of study"
          },
          "year": {
            "type": "string",
            "pattern": "^[0-9]{4}$",
            "description": "Graduation year"
          },
          "honors": {
            "type": "string",
            "maxLength": 100,
            "description": "Academic honors or distinctions"
          }
        }
      },
      "description": "Educational background"
    },
    "workHistory": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["company", "position"],
        "properties": {
          "company": {
            "type": "string",
            "maxLength": 100
          },
          "position": {
            "type": "string",
            "maxLength": 100
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "description": "Start date in YYYY-MM-DD format"
          },
          "endDate": {
            "type": "string",
            "format": "date",
            "description": "End date in YYYY-MM-DD format (null for current position)"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "description": "Job description and achievements"
          },
          "location": {
            "type": "string",
            "maxLength": 100
          },
          "isCurrent": {
            "type": "boolean",
            "description": "Whether this is the current position"
          }
        }
      },
      "description": "Professional work history"
    },
    "mentorship": {
      "type": "object",
      "properties": {
        "willingToMentor": {
          "type": "boolean",
          "description": "Whether alumni is available for mentoring"
        },
        "mentorshipAreas": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 50
          },
          "description": "Areas where alumni can provide mentorship"
        },
        "seekingMentor": {
          "type": "boolean",
          "description": "Whether alumni is seeking mentorship"
        },
        "mentorshipNeeds": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 50
          },
          "description": "Areas where alumni seeks mentorship"
        }
      }
    },
    "preferences": {
      "type": "object",
      "properties": {
        "privacy": {
          "type": "object",
          "properties": {
            "showEmail": {
              "type": "boolean",
              "default": false
            },
            "showPhone": {
              "type": "boolean",
              "default": false
            },
            "showLocation": {
              "type": "boolean",
              "default": true
            },
            "allowDirectContact": {
              "type": "boolean",
              "default": true
            },
            "showInDirectory": {
              "type": "boolean",
              "default": true
            }
          }
        },
        "notifications": {
          "type": "object",
          "properties": {
            "emailNotifications": {
              "type": "boolean",
              "default": true
            },
            "eventReminders": {
              "type": "boolean",
              "default": true
            },
            "networkUpdates": {
              "type": "boolean",
              "default": true
            },
            "mentorshipRequests": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "initials": {
      "type": "string",
      "pattern": "^[A-Z]{1,3}$",
      "description": "Initials for avatar display"
    },
    "profileImage": {
      "type": "string",
      "format": "uri",
      "description": "URL to profile image"
    },
    "lastLoginDate": {
      "type": "string",
      "format": "date-time",
      "description": "Last login timestamp"
    },
    "memberSince": {
      "type": "string",
      "format": "date",
      "description": "Date when alumni joined the portal"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "description": "Whether the alumni profile is active"
    },
    "isVerified": {
      "type": "boolean",
      "default": false,
      "description": "Whether the alumni profile has been verified"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 30
      },
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Administrative tags for categorization"
    }
  },
  "additionalProperties": false
}
